QLabel{
    color: #f0f0f0;
    background-color: transparent;
}

QMainWindow{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(26, 54, 114, 1), stop: 1 rgba(13, 13, 110, 1));
}

QPushButton{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(1, 23, 65, 1), stop: 1 rgba(4, 54, 121, 1));
    border-radius: 6px;
    color: #f0f0f0; 
    border: 1px solid rgba(255, 255, 255, 0.7); 
}

QComboBox{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(1, 23, 65, 1), stop: 1 rgba(4, 54, 121, 1));
    border-radius: 6px;
    color: #f0f0f0; 
    border: 1px solid rgba(255, 255, 255, 0.7); 
}

QComboBox QAbstractItemView{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(1, 23, 65, 1), stop: 1 rgba(4, 54, 121, 1));
    color: #f0f0f0; 
}

QComboBox:hover{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(1, 42, 65, 1), stop: 1 rgba(0, 73, 116, 1));
    color: #f0f0f0; 
}

QPushButton:hover{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(1, 42, 65, 1), stop: 1 rgba(0, 73, 116, 1));
    border-radius: 6px;
    color: #f0f0f0; 
    border: 1px solid rgba(255, 255, 255, 0.7); 
}

QLineEdit{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(1, 36, 65, 1), stop: 1 rgba(0, 104, 165, 1));
    border-radius: 6px;
    color: #f0f0f0; 
    border: 1px solid rgba(255, 255, 255, 0.7); 
}

QTextEdit{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(1, 21, 65, 1), stop: 1 rgba(0, 77, 165, 1));
    border-radius: 6px;
    color: #f0f0f0; 
    border: 1px solid rgba(255, 255, 255, 0.7); 
}

QListWidget{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(3, 36, 80, 1), stop: 1 rgba(61, 66, 71, 1));
    border-radius: 6px;
    color: #f0f0f0; 
    border: 1px solid rgba(255, 255, 255, 0.7); 
}

QComboBox:disabled {
    color:darkgray
}
QComboBox:disabled QAbstractItemView{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(44, 54, 73, 1), stop: 1 rgba(53, 78, 110, 1));
    color: darkgray; 
}

QLineEdit:disabled{
    color: darkgray;
}

QLabel:disabled {
    color:darkgray
}

QWidget#tab {
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(11, 38, 112, 1), stop: 1 rgba(0, 35, 80, 1));
    border: 1px solid rgba(255, 255, 255, 0.7); 
}

QWidget#tab_2 {
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(11, 38, 112, 1), stop: 1 rgba(0, 35, 80, 1));
    border: 1px solid rgba(255, 255, 255, 0.7); 
}


QTabWidget{
    background-color: rgb(23, 23, 24);
}

QTabBar::tab {
    background-color: rgba(30, 53, 128, 255);
    color: #f0f0f0;
}

QTabBar::tab:disabled {
    background-color: gray; /* Couleur de fond des onglets désactivés */
}

QTabBar::tab:selected {
    background-color: rgba(30, 72, 128, 255); /* Couleur de fond lorsque l'onglet est actif */
}

QTabBar::tab:hover {
    background-color: rgba(30, 72, 128, 255); /* Couleur de fond lorsque l'onglet est actif */
}

QMessageBox{
    background-color: qlineargradient(x1: 0, x2: 1, stop: 0 rgba(11, 38, 112, 1), stop: 1 rgba(0, 35, 80, 1));
    color: #f0f0f0; 
}

QScrollBar:vertical {
    background: #1e1e1e;
}

QScrollBar:horizontal {
    background: #1e1e1e;
}

QWidget#Messagerie{
       background-color: rgb(8, 8, 70);
}

QWidget#Friends{
    background-color: rgb(8, 8, 70);
}
